{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "DenyRootUser",
      "Effect": "Deny",
      "Action": "*",
      "Resource": "*",
      "Condition": {
        "StringEquals": {
          "aws:PrincipalAccount": "${aws:accountId}"
        }
      },
      "Principal": {
        "AWS": "arn:aws:iam::${aws:accountId}:root"
      }
    }
  ]
}

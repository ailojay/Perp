{
  "Version": "2012-10-17",
  "Id": "AllowEventBridgeToPublish",
  "Statement": [
    {
      "Sid": "AllowEventBridgePublish",
      "Effect": "Allow",
      "Principal": {
        "Service": "events.amazonaws.com"
      },
      "Action": "sns:Publish",
      "Resource": "arn:aws:sns:{{region}}:{{account}}:{{topic_name}}",
      "Condition": {
        "ArnLike": {
          "aws:SourceArn": "arn:aws:events:{{region}}:{{account}}:rule/*"
        }
      }
    }
  ]
}
